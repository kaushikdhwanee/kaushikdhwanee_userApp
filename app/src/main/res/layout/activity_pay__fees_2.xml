<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg"
    tools:context="in.tiqs.kaushikdhwaneeuser.act.Pay_Fees_2">



    <include
        android:id="@+id/header"
        layout="@layout/payment_pending_list_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp" />


    <ListView

        android:id="@+id/pending_payments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/submitt"
        android:layout_below="@+id/header"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="27dp"
        android:divider="#00000000"
        android:dividerHeight="5dp"
        android:paddingBottom="5dp">

    </ListView>







   <RelativeLayout
       android:id="@+id/submitt"

       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_alignParentBottom="true"
       android:background="@color/app_theme1"
       >
       <Button
           android:id="@+id/pay_adv"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="Pay Advance"

           android:background="@android:color/transparent"
           android:textSize="16sp"
           android:textColor="@color/white"
           />

       <Button
           android:id="@+id/submit"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="Pay Now"
           android:background="@android:color/transparent"
           android:textSize="16sp"
           android:textColor="@color/white"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:textColor="@color/white"
           android:layout_toLeftOf="@+id/pfb_tamt"
           android:layout_centerInParent="true"
           android:textSize="16sp"
           />
       <TextView
           android:layout_marginRight="10dp"
           android:id="@+id/pfb_tamt"
           android:layout_alignParentRight="true"
           android:layout_centerInParent="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           android:text="0.0"
           android:textSize="16sp"
           />


   </RelativeLayout>

</RelativeLayout>
