<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="10dp"
        android:paddingLeft="10dp"

        android:paddingRight="10dp"

        android:orientation="vertical">
        <in.tiqs.kaushikdhwaneeuser.cviews.CircularImageView
            android:id="@+id/pimg1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:src="@drawable/sm1"
            app:civ_border="true"
            android:layout_gravity="center"
            app:civ_border_color="@color/app_theme1"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@android:color/darker_gray"
            app:civ_shadow_radius="10" />





        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_name"
            android:layout_width="match_parent"
            app:hintAnimationEnabled="false"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/reg_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                app:hintAnimationEnabled="false"

                android:inputType="text"
                android:hint="Student Name" >

            </EditText>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_num"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/reg_num1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:maxLength="10"
                android:hint="Mobile No." >

            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_wnum"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/reg_wnum1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:maxLength="10"
                android:hint="Whatsapp No." >

            </EditText>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/reg_email1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:hint="Email" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_age"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/reg_age1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:inputType="phone"
                android:maxLength="2"
                android:paddingLeft="10dp">

            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_oname"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/reg_oname1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organization Name"
                android:inputType="text"
                android:paddingLeft="10dp">

            </EditText>
        </android.support.design.widget.TextInputLayout>



            <TextView
                android:id="@+id/reg_sbranch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bootom_line1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:padding="10dp"
                android:text="Select Branch" >

            </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            > <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_grey"
            android:paddingLeft="5dp"
            android:id="@+id/fee_hint"
            android:text="Registration fee - Rs."/>
            <TextView
                android:layout_toRightOf="@+id/fee_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/dark_grey"
                android:paddingLeft="5dp"
                android:id="@+id/fee"
                android:text="0.0"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/app_coupon"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/apply_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:inputType="text"
                    android:hint="Coupon Code" >

                </EditText>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/apply"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APPLY"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            >
            <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_grey"
            android:paddingLeft="5dp"
            android:id="@+id/total_hint"
            android:text="Total Fee : Rs."/>
            <TextView
                    android:layout_toRightOf="@+id/total_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_grey"
            android:paddingLeft="5dp"
            android:id="@+id/total"
            android:text="0.0"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:layout_marginTop="5dp"

                android:text="Newspaper Insert"/>

            <CheckBox
                android:id="@+id/friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:layout_marginTop="5dp"

                android:text="friend Reference,specify"/>
            <CheckBox
                android:id="@+id/just_dial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:layout_marginTop="5dp"

                android:text="Just Dial"/>
            <CheckBox
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:layout_marginTop="5dp"

                android:text="Others,specify"/>
            <CheckBox
                android:visibility="gone"
                android:id="@+id/internet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:layout_marginTop="5dp"

                android:text="Internet sites,specify"/>


        </LinearLayout>

        <EditText
            android:id="@+id/other_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:gravity="top|left"
            android:textColorHint="@color/light_gray"
            android:hint="How you know about Us. "
            android:padding="10dp"

            android:background="@drawable/comments_border"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/tandC"
                />
            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I agree to"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/terms_con"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Terms &amp; Conditions."
                android:textColor="@color/app_color"
                />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:id="@+id/reg_submit"
            android:layout_marginTop="30dp"

            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@color/app_theme1"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/transparent"/>


    </LinearLayout>



</ScrollView>
