<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ioo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                   >


                    <in.tiqs.kaushikdhwaneeuser.cviews.CircularImageView
                        android:id="@+id/pimg1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:src="@drawable/user_default"
                        app:civ_border="true"
                        android:layout_gravity="center"
                        app:civ_border_width="2dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="@android:color/darker_gray"
                        app:civ_shadow_radius="10" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/user_name"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/dark_grey"
                        android:text=""
                        />
                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/io"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="10dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/transparent"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/pr_name"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/pr_name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Name"
                        android:textColor="@color/black"
                        >

                    </EditText>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ul_num"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ul_num1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:hint="Mobile No."
                        android:textColor="@color/black"
                        >

                    </EditText>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ul_p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/ul_email1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="Email"
                        android:textColor="@color/black"
                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </LinearLayout>


<Button
    android:layout_below="@+id/ioo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="SUBMIT"
    android:id="@+id/p_submit"
    android:layout_marginBottom="30dp"
    android:layout_marginRight="50dp"
    android:layout_marginLeft="50dp"

    android:layout_gravity="center"
    android:layout_alignParentBottom="true"
    android:textColor="@color/white"
    android:background="@drawable/btn_bg"/>


    </RelativeLayout>
</ScrollView>

</LinearLayout>
