<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/ab2"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical">



        <android.support.design.widget.TextInputLayout
            android:id="@+id/pr_name"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pr_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Name" >

            </EditText>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/ul_num"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ul_num1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="10"
                android:hint="Mobile No." >

            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ul_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/ul_p1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/reg_sbranch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bootom_line1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:padding="10dp"
            android:text="Select Branch" >

        </TextView>



        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:inputType="textEmailAddress"
            android:hint="Comments"
            android:gravity="left|top"
            android:padding="10dp"
            android:background="@drawable/cborder2"/>




        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book A Demo"

            android:layout_margin="50dp"

            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg"/>

    </LinearLayout>
    </ScrollView>


</LinearLayout>
