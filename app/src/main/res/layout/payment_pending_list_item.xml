        />-->
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Sessions"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="12sp"
        android:gravity="left|center"
        android:textColor="@color/black"
        android:id="@+id/total_sessions"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sessions/Week"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="12sp"
        android:gravity="left|center"
        android:textColor="@color/black"
        android:id="@+id/sessions_week"
        />
</LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>
<TextView
    android:layout_width="0dp"
    android:layout_weight=".8"
    android:layout_height="match_parent"
    android:text="Month"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:textSize="12sp"
    android:gravity="left|center"
    android:textColor="@color/black"
    android:id="@+id/month"
    />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>

        <TextView

    android:layout_width="0dp"
    android:layout_weight=".6"
    android:layout_height="match_parent"
    android:text="Due Amount"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:textSize="12sp"
    android:gravity="center"
            android:layout_marginRight="10dp"
    android:textColor="@color/black"
    android:id="@+id/due_amount"


    />
    </LinearLayout>
        <CheckBox
           android:layout_centerInParent="true"
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:drawableRight="@drawable/check_box_selector"
            android:paddingRight="5dp"/>



        <LinearLayout
            android:id="@+id/header3"

            android:layout_width="match_parent"
            android:layout_below="@+id/header2"
            android:orientation="horizontal"
            android:layout_weight="1.4"

            android:layout_height="match_parent"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="You have no Pending Amount "
            android:background="@color/app_theme1"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18sp"
            android:gravity="left|center"
            android:textColor="@color/white"
            android:id="@+id/no_fee"
            />
        </LinearLayout>

    </RelativeLayout>

