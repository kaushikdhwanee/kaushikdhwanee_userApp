               android:layout_gravity="center"
               card_view:svg_raw_resource="@raw/circle_flower"
               android:id="@+id/imgItem"
               android:scaleType="centerCrop" />-->
        <ImageView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/calss_default"
            android:id="@+id/imgItem" />

        <FrameLayout
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_centerInParent="true"
            />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="@color/black"
        tools:text="Item test text"
        android:id="@+id/tvItem" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@color/dark_grey"
        tools:text="Item test text"
        android:id="@+id/tvSubItem" />

    <!--            android:textSize="12sp"             android:textAppearance="?android:attr/textAppearanceMedium"

-->
</LinearLayout>

