<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/notif_rbg"
        android:layout_margin="5dp">



    
    <ImageView android:id="@+id/notif_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        android:layout_gravity="center|left"/>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Admin"
            android:textColor="@color/app_theme1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="5dp"
            android:id="@+id/notif_nmae"
            android:layout_toLeftOf="@+id/notif_dt"
            android:layout_toStartOf="@+id/notif_dt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1 jan"
            android:textColor="@color/dark_grey"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:id="@+id/notif_dt" />

        <TextView
            android:id="@+id/mesg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="Aaa"
            android:textColor="@color/dark_grey"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingLeft="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_below="@+id/notif_nmae"
            />

    </RelativeLayout>

</LinearLayout>
</LinearLayout>